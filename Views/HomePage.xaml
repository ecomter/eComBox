        </StackPanel>
        <muxc:ProgressRing Grid.Row="1" Margin="70" x:Name="LoadingRing" IsActive="False" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center" Width="50" Height="50"/>

    </Grid>
    </ScrollViewer>
        </StackPanel>

</Page>
