<Page x:Class="eComBox.Views.HomePage" xmlns:muxc="using:Microsoft.UI.Xaml.Controls" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
   xmlns:animations="using:CommunityToolkit.WinUI.Animations"

  mc:Ignorable="d">
    

    <Grid
     MaxWidth="1000"
     HorizontalAlignment="Stretch">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Grid x:Name="ContentArea" Padding="24,0,24,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Margin="0,20,0,0" VerticalAlignment="Top">

                    <ScrollViewer HorizontalScrollMode="Enabled">
                    <StackPanel x:Name="headerTileGallery" Grid.Row="0" Orientation="Horizontal"   Spacing="15" Margin="25,0,36,0" RenderTransformOrigin="0.5,0.5" >
                        <StackPanel.RenderTransform>
                            <CompositeTransform/>
                        </StackPanel.RenderTransform>
                        <Grid Width="220"  Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource SurfaceStrokeColorFlyoutBrush}" CornerRadius="8">
                            <HyperlinkButton Padding="-1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"  Click="ToDatePage" CornerRadius="{StaticResource OverlayCornerRadius}">
                                <Grid Padding="24" VerticalAlignment="Stretch" RowSpacing="16">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="56" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <FontIcon Grid.RowSpan="3" Margin="-12" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="16" Foreground="{ThemeResource TextFillColorPrimaryBrush}" Glyph="&#xE8A7;" />
                                    <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Top">
                                        <ContentPresenter.Content>
                                            <Image Source="/Assets/Header-DatePage.png" />
                                        </ContentPresenter.Content>
                                    </ContentPresenter>
                                    <StackPanel Grid.Row="1" Orientation="Vertical" Spacing="4">
                                        <TextBlock x:Name="TitleText" FontSize="18" Foreground="{ThemeResource TextFillColorPrimaryBrush}" Style="{StaticResource BodyTextBlockStyle}"  x:Uid="HomePage_Date_Title" />
                                        <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}" Style="{StaticResource CaptionTextBlockStyle}" FontSize="15" x:Uid="HomePage_Date_Description"  />
                                    </StackPanel>
                                </Grid>
                            </HyperlinkButton>
                        </Grid>
                        <Grid Width="220" Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource SurfaceStrokeColorFlyoutBrush}" CornerRadius="8">
                            <HyperlinkButton Padding="-1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" CornerRadius="{StaticResource OverlayCornerRadius}" Click="ToGeoPage">
                                <Grid Padding="24" VerticalAlignment="Stretch" RowSpacing="16">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="56" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <FontIcon Grid.RowSpan="3" Margin="-12" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="16" Foreground="{ThemeResource TextFillColorPrimaryBrush}" Glyph="&#xE8A7;" />
                                    <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Top">
                                        <ContentPresenter.Content>
                                            <Image Source="/Assets/Header-GeoPage.png" />
                                        </ContentPresenter.Content>
                                    </ContentPresenter>
                                    <StackPanel Grid.Row="1" Orientation="Vertical" Spacing="4">
                                        <TextBlock FontSize="18" Foreground="{ThemeResource TextFillColorPrimaryBrush}" Style="{StaticResource BodyTextBlockStyle}"  x:Uid="HomePage_Geo_Title" />
                                        <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}" Style="{StaticResource CaptionTextBlockStyle}" FontSize="15" x:Uid="HomePage_Geo_Description" />
                                    </StackPanel>
                                </Grid>
                            </HyperlinkButton>
                        </Grid>
                        <Grid Width="220"  Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource SurfaceStrokeColorFlyoutBrush}" CornerRadius="8">
                            <HyperlinkButton Padding="-1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"  Click="ToTranslatorPage" CornerRadius="{StaticResource OverlayCornerRadius}">
                                <Grid Padding="24" VerticalAlignment="Stretch" RowSpacing="16">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="56" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <FontIcon Grid.RowSpan="3" Margin="-12" HorizontalAlignment="Right" VerticalAlignment="Bottom" FontSize="16" Foreground="{ThemeResource TextFillColorPrimaryBrush}" Glyph="&#xE8A7;" />
                                    <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Top">
                                        <ContentPresenter.Content>
                                            <Image Source="/Assets/Header-Translator.png" />
                                        </ContentPresenter.Content>
                                    </ContentPresenter>
                                    <StackPanel Grid.Row="1" Orientation="Vertical" Spacing="4">
                                        <TextBlock FontSize="18" Foreground="{ThemeResource TextFillColorPrimaryBrush}" Style="{StaticResource BodyTextBlockStyle}"  x:Uid="HomePage_Translator_Title" />
                                        <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}" Style="{StaticResource CaptionTextBlockStyle}" FontSize="15" x:Uid="HomePage_Translator_Description"  />
                                    </StackPanel>
                                </Grid>
                            </HyperlinkButton>
                        </Grid>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>

                <StackPanel Orientation="Vertical" Grid.Row="1" x:Name="board" Visibility="Collapsed" Spacing="10" Margin="35,10,36,30">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="newsHeader" Grid.Column="0" Text="百度热搜榜" FontSize="24" FontWeight="Bold" Foreground="{ThemeResource TextFillColorPrimaryBrush}" />
                        <Button Click="refreshUrl" VerticalContentAlignment="Center" HorizontalAlignment="Right"  Grid.Column="1" FontSize="24" >
                            <FontIcon Glyph="&#xE72C;" />
                        </Button>
                    </Grid>
                    <Grid Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource SurfaceStrokeColorFlyoutBrush}" CornerRadius="8">
                        <HyperlinkButton Padding="-1" x:Name="Nav1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Bottom" CornerRadius="2">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Margin="8"  Text="1" FontSize="23" FontWeight="ExtraBold" Foreground="#FFFF0600"/>
                                <TextBlock x:Name="Trend1" TextWrapping="Wrap" Foreground="{ThemeResource TextFillColorPrimaryBrush}" VerticalAlignment="Center" Margin="8" FontSize="17" />
                                <FontIcon HorizontalAlignment="Right" Margin="8" FontSize="17" Foreground="{ThemeResource TextFillColorPrimaryBrush}" Glyph="&#xE8AD;" />
                            </StackPanel>
                        </HyperlinkButton>
                    </Grid>
                    <Grid Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource SurfaceStrokeColorFlyoutBrush}" CornerRadius="8">
                        <HyperlinkButton Padding="-1"  x:Name="Nav2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Bottom" CornerRadius="2">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Margin="8" TextWrapping="Wrap" Text="2" FontSize="23" FontWeight="ExtraBold" Foreground="HotPink" />
                                <TextBlock x:Name="Trend2" TextWrapping="Wrap" Foreground="{ThemeResource TextFillColorPrimaryBrush}" VerticalAlignment="Center" Margin="8" FontSize="17" />
                                <FontIcon HorizontalAlignment="Right" Margin="8" FontSize="17" Foreground="{ThemeResource TextFillColorPrimaryBrush}" Glyph="&#xE8AD;" />
                            </StackPanel>
                        </HyperlinkButton>
                    </Grid>
                    <Grid Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource SurfaceStrokeColorFlyoutBrush}" CornerRadius="8">
                        <HyperlinkButton Padding="-1"  x:Name="Nav3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Bottom" CornerRadius="2" >
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock TextWrapping="Wrap" Margin="8" Text="3" FontSize="23" FontWeight="ExtraBold" Foreground="LightPink"/>
                                <TextBlock x:Name="Trend3" Foreground="{ThemeResource TextFillColorPrimaryBrush}" TextWrapping="Wrap" VerticalAlignment="Center" Margin="8" FontSize="17" />
                                <FontIcon HorizontalAlignment="Right" Margin="8" FontSize="17" Foreground="{ThemeResource TextFillColorPrimaryBrush}" Glyph="&#xE8AD;" />
                            </StackPanel>
                        </HyperlinkButton>
                    </Grid>
                    <Grid Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource SurfaceStrokeColorFlyoutBrush}" CornerRadius="8">
                        <HyperlinkButton Padding="-1"  x:Name="Nav4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Bottom" CornerRadius="2">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Margin="8" Text="4" FontSize="23" FontWeight="ExtraBold" />
                                <TextBlock x:Name="Trend4" Foreground="{ThemeResource TextFillColorPrimaryBrush}" TextWrapping="Wrap" VerticalAlignment="Center" Margin="8" FontSize="17" />
                                <FontIcon HorizontalAlignment="Right" Margin="8" FontSize="17" Foreground="{ThemeResource TextFillColorPrimaryBrush}" Glyph="&#xE8AD;" />
                            </StackPanel>
                        </HyperlinkButton>
                    </Grid>
                    <Grid Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource SurfaceStrokeColorFlyoutBrush}" CornerRadius="8">
                        <HyperlinkButton Padding="-1"  x:Name="Nav5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Bottom" CornerRadius="2">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Margin="8" Text="5" FontSize="23" FontWeight="ExtraBold" />
                                <TextBlock x:Name="Trend5" Foreground="{ThemeResource TextFillColorPrimaryBrush}" TextWrapping="Wrap" VerticalAlignment="Center" Margin="8" FontSize="17" />
                                <FontIcon HorizontalAlignment="Right" Margin="8" FontSize="17" Foreground="{ThemeResource TextFillColorPrimaryBrush}" Glyph="&#xE8AD;" />
                            </StackPanel>
                        </HyperlinkButton>
                    </Grid>
                    <Grid Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource SurfaceStrokeColorFlyoutBrush}" CornerRadius="8">
                        <HyperlinkButton Padding="-1"  x:Name="Nav6" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Bottom" CornerRadius="2">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Margin="8" Text="6" FontSize="23" FontWeight="ExtraBold" />
                                <TextBlock x:Name="Trend6" Foreground="{ThemeResource TextFillColorPrimaryBrush}" TextWrapping="Wrap" VerticalAlignment="Center" Margin="8" FontSize="17" />
                                <FontIcon HorizontalAlignment="Right" Margin="8" FontSize="17" Foreground="{ThemeResource TextFillColorPrimaryBrush}" Glyph="&#xE8AD;" />
                            </StackPanel>
                        </HyperlinkButton>
                    </Grid>
                    <Grid Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource SurfaceStrokeColorFlyoutBrush}" CornerRadius="8">
                        <HyperlinkButton Padding="-1"  x:Name="Nav7" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Bottom" CornerRadius="2">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Margin="8" Text="7" FontSize="23" FontWeight="ExtraBold" />
                                <TextBlock x:Name="Trend7" Foreground="{ThemeResource TextFillColorPrimaryBrush}" TextWrapping="Wrap" VerticalAlignment="Center" Margin="8" FontSize="17" />
                                <FontIcon HorizontalAlignment="Right" Margin="8" FontSize="17" Foreground="{ThemeResource TextFillColorPrimaryBrush}" Glyph="&#xE8AD;" />
                            </StackPanel>
                        </HyperlinkButton>
                    </Grid>
                    <Grid Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource SurfaceStrokeColorFlyoutBrush}" CornerRadius="8">
                        <HyperlinkButton Padding="-1"  x:Name="Nav8" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Bottom" CornerRadius="2">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Margin="8" Text="8" FontSize="23" FontWeight="ExtraBold" />
                                <TextBlock x:Name="Trend8" Foreground="{ThemeResource TextFillColorPrimaryBrush}" TextWrapping="Wrap" VerticalAlignment="Center" Margin="8" FontSize="17" />
                                <FontIcon HorizontalAlignment="Right" Margin="8" FontSize="17" Foreground="{ThemeResource TextFillColorPrimaryBrush}" Glyph="&#xE8AD;" />
                            </StackPanel>
                        </HyperlinkButton>
                    </Grid>
                    <Grid Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource SurfaceStrokeColorFlyoutBrush}" CornerRadius="8">
                        <HyperlinkButton Padding="-1"  x:Name="Nav9" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Bottom" CornerRadius="2">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Margin="8" Text="9" FontSize="23" FontWeight="ExtraBold" />
                                <TextBlock x:Name="Trend9" Foreground="{ThemeResource TextFillColorPrimaryBrush}" TextWrapping="Wrap" VerticalAlignment="Center" Margin="8" FontSize="17" />
                                <FontIcon HorizontalAlignment="Right" Margin="8" FontSize="17" Foreground="{ThemeResource TextFillColorPrimaryBrush}" Glyph="&#xE8AD;" />
                            </StackPanel>
                        </HyperlinkButton>
                    </Grid>
                    <Grid Background="{ThemeResource AcrylicBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource SurfaceStrokeColorFlyoutBrush}" CornerRadius="8">
                        <HyperlinkButton Padding="-1"  x:Name="Nav10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Bottom" CornerRadius="2">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Margin="8" Text="10" FontSize="23" FontWeight="ExtraBold" />
                                <TextBlock x:Name="Trend10" Foreground="{ThemeResource TextFillColorPrimaryBrush}" TextWrapping="Wrap" VerticalAlignment="Center" Margin="8" FontSize="17" />
                                <FontIcon HorizontalAlignment="Right" Margin="8" FontSize="17" Foreground="{ThemeResource TextFillColorPrimaryBrush}" Glyph="&#xE8AD;" />
                            </StackPanel>
                        </HyperlinkButton>
                    </Grid>
                </StackPanel>
                <muxc:ProgressRing Grid.Row="1" Margin="70" x:Name="LoadingRing" IsActive="False" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center" Width="50" Height="50"/>

            </Grid>
        </ScrollViewer>
    </Grid>

</Page>
