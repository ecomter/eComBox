<ContentDialog
    x:Class="eComBox.Views.FirstRunDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Uid="FirstRunDialog"
    xmlns:xaml="using:Windows.UI.Xaml"
xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    d:DesignHeight="345"
    d:DesignWidth="550"
    CornerRadius="5"
    mc:Ignorable="d">
    <ContentDialog.TitleTemplate>
        <DataTemplate x:DataType="x:String">
            <StackPanel Orientation="Horizontal">
                <Image
                    Width="40"
                    Height="40"
                    Source="ms-appx:///Assets/StoreLogo.png" />
                <TextBlock
                    Margin="{StaticResource SmallLeftMargin}"
                    VerticalAlignment="Center"
                    Text="{x:Bind}" />
            </StackPanel>
        </DataTemplate>
    </ContentDialog.TitleTemplate>
    <ScrollViewer>
        <StackPanel Orientation="Vertical">
            <!-- 添加 x:Uid 标识符用于本地化 -->
            <TextBlock x:Uid="FirstRun_Body" TextWrapping="WrapWholeWords" />
            <HyperlinkButton x:Uid="WhatsNew_PrivacyPolicy.Content" NavigateUri="https://ecombox.ecomter.site/docs/privacy" Margin="{StaticResource XSmallTopMargin}" />
        </StackPanel>
    </ScrollViewer>

</ContentDialog>
