<Page
    x:Class="eComBox.Views.betaPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls" xmlns:local="using:eComBox.Views"
    mc:Ignorable="d">
    
    <Grid MaxWidth="1000" Margin="24,10,24,16" HorizontalAlignment="Stretch">
        <Grid>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="XX-XX"/>
                <controls:RadialGauge x:Name="RadialGauge"
                                      Value="10"
                                      Width="150"
                              IsEnabled="True"
                              IsInteractive="False"
                              MaxAngle="150"
                              Maximum="35"
                              MinAngle="-150"
                              Minimum="0" />
            </StackPanel>
            <Button Content="11024" Width="100" Click="settings"/>
        </Grid>

        <Popup x:Name="customPopup"
               LightDismissOverlayMode="On"
               IsLightDismissEnabled="False">

            <Grid
                Width="800"
                Height="auto"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Grid.Transitions>
                    <TransitionCollection>
                        <PopupThemeTransition />
                    </TransitionCollection>
                </Grid.Transitions>

                <Border CornerRadius="8" >
                    <!-- 自定义对话框内容 -->
                    <local:CustomDialog x:Name="customDialog" Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}"/>

                </Border>
            </Grid>
        </Popup>
    </Grid>

</Page>
