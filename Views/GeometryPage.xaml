<Page
    x:Class="eComBox.Views.GeometryPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    mc:Ignorable="d">
    <ScrollViewer>
        <Grid 
            x:Name="ContentArea"
            Margin="20,15,0,20">
            <StackPanel
                Orientation="Vertical"
                MaxWidth="1000"
                HorizontalAlignment="Stretch">
                <Pivot
                    x:Name="Items">
                    <Pivot.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="{Binding}" />
                        </DataTemplate>
                    </Pivot.HeaderTemplate>
                    <PivotItem x:Uid="Geometry_PivotItem1">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <Grid Margin="0,0,0,40">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Grid RowSpacing="6" Margin="0,40,0,0" Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.8*" />
                                        <ColumnDefinition Width="0.6*" />
                                        <ColumnDefinition Width="0.1*" />
                                        <ColumnDefinition Width="0.6*" />
                                        <ColumnDefinition Width="0.2*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions >
                                        <RowDefinition Height="Auto"  />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="2*"/>
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Grid.Row="0"
                                        x:Uid="Geometry_Triangle_SideA"
                               />
                                    <TextBox
                                        Grid.Column="1"
                                        Grid.Row="0"
                                        x:Name="Tri_a" />
                                    <TextBlock
                                        Grid.Column="0"
                                        Grid.Row="1"
                                        x:Uid="Geometry_Triangle_SideB"
                                     />
                                    <TextBox
                                        Grid.Column="1"
                                        Grid.Row="1"
                                        x:Name="Tri_b"
                                        Text="" />
                                    <TextBlock
                                        Grid.Column="0"
                                        Grid.Row="2"
                                        x:Uid="Geometry_Triangle_SideC" />
                                    <TextBox
                                        Grid.Column="1"

                                        
                                        Grid.Row="2"
                                        x:Name="Tri_c"/>
                                    <Button 
                                        Margin="10,45,0,30" 
                                        Grid.Row="3"  
                                        Width="100" 
                                        x:Name="Apply" 
                                        x:Uid="Geometry_Calculate"

                                        Grid.Column="1" 
                                        Grid.ColumnSpan="1"  
                                        Click="Submit" 
                                        Style="{StaticResource AccentButtonStyle}"/>

                                    <muxc:NumberBox 
                                        Margin="0,20,0,30" 
                                        Grid.Column="0" 
                                        Grid.Row="3" 
                                        x:Name="DemPlace" 
                                        Maximum="10" 
                                        Minimum="1" 
                                        Value="{x:Bind DPlace, Mode=TwoWay}" 
                                        x:Uid="Geometry_DecimalPlaces"
  
                                        PlaceholderText="5" 
                                        SmallChange="1" 
                                        LargeChange="1" 
                                        SpinButtonPlacementMode="Inline"/>
                                    <muxc:ProgressRing 
                                        Grid.Row="3" 
                                        Grid.Column="2" 
                                        IsActive="False"  
                                        x:Name="loaderring" />
                                    <TextBlock 
                                        Grid.Column="0" 
                                        Grid.Row="4" 
                                        Grid.ColumnSpan="3"
                                        x:Uid="Geometry_Area"/>
                                    <TextBox 
                                        x:Name="square" 
                                        Grid.Row="4" 
                                        x:Uid="Geometry_WaitingForCalculation"
                               
                                        IsReadOnly="True" 
                                        Grid.Column="1"/>
                                    <TextBlock 
                                        Grid.Column="0" 
                                        Grid.Row="5" 
                                        Grid.ColumnSpan="3"
                                        x:Uid="Geometry_Perimeter"/>
                                    <TextBox 
                                        x:Name="circumference" 
                                        Grid.Row="5" 
                                        x:Uid="Geometry_WaitingForCalculation"
                                        IsReadOnly="True" 
                                        Grid.Column="1"/>
                                    <TextBlock 
                                        Grid.Column="0" 
                                        Grid.Row="6" 
                                        Grid.ColumnSpan="3"
                                        x:Uid="Geometry_Angle_A_Cos"/>
                                    <TextBox 
                                        x:Name="cosineA" 
                                        Grid.Row="6" 
                                        x:Uid="Geometry_WaitingForCalculation"
                                        IsReadOnly="True" 
                                        Grid.Column="1"/>
                                    <TextBox 
                                        x:Name="AngleA" 
                                        Grid.Row="6" 
                                        x:Uid="Geometry_WaitingForCalculation"
                                        IsReadOnly="True" 
                                        Grid.Column="3"/>
                                    <TextBlock 
                                        Grid.Column="0" 
                                        Grid.Row="7" 
                                        Grid.ColumnSpan="3"
                                        x:Uid="Geometry_Angle_B_Cos"/>
                                    <TextBox 
                                        x:Name="cosineB" 
                                        Grid.Row="7" 
                                        x:Uid="Geometry_WaitingForCalculation"
                                        IsReadOnly="True" 
                                        Grid.Column="1"/>
                                    <TextBox 
                                        x:Name="AngleB" 
                                        Grid.Row="7" 
                                        x:Uid="Geometry_WaitingForCalculation"
                                        IsReadOnly="True" 
                                        Grid.Column="3"/>
                                    <TextBlock 
                                        Grid.Column="0" 
                                        Grid.Row="8" 
                                        Grid.ColumnSpan="3"
                                        x:Uid="Geometry_Angle_C_Cos"/>
                                    <TextBox 
                                        x:Name="cosineC" 
                                        Grid.Row="8"
                                        
                                        x:Uid="Geometry_WaitingForCalculation"
                                        IsReadOnly="True" 
                                        Grid.Column="1"/>
                                    <TextBox 
                                        x:Name="AngleC" 
                                        Grid.Row="8"
                                        
                                        x:Uid="Geometry_WaitingForCalculation"
                                        IsReadOnly="True" 
                                        Grid.Column="3"/>
                                    <TextBlock 
                                        x:Uid="Geometry_Triangle_Image"
                                        Grid.Row="9" 
                                        FontSize="20" 
                                        Margin="20,20,0,0" />
                                    <Polygon 
                                        x:Name="TriangleShape" 
                                        Points="0,0" 
                                        StrokeThickness="2" 
                                        Grid.ColumnSpan="3"  
                                        Stroke="{StaticResource SystemAccentColor}" 
                                        Grid.Row="9"/>
                                </Grid>
                            </Grid>
                        </ScrollViewer>
                    </PivotItem>

                    <PivotItem x:Uid="Geometry_PivotItem2">
                        <Grid>
                            <muxc:InfoBar
                                IsOpen="True"
                                IsIconVisible="True"
                                IsClosable="False"
                                
                         
                                x:Uid="Geometry_InfoBar_Message" />
                        </Grid>
                    </PivotItem>
                    <PivotItem x:Uid="Geometry_Conic" >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <muxc:InfoBar
                                IsOpen="True"
                                IsIconVisible="True"
                                IsClosable="False"

                             
                                x:Uid="Geometry_InfoBar_Message"/>
                        </Grid>
                    </PivotItem>
                </Pivot>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
